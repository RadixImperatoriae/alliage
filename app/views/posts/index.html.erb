<!-- Page Content -->
    <div class="container">

      <!-- Page Heading -->
      <h1 class="my-4">Notícias
      </h1>

      <% @posts.each_with_index do |post, index| %>
        <hr>
        <div class="row">
          <div class="col-md-3">
            <%= image_tag(post.image.url, class:"img-fluid rounded mb-3 mb-md-0", style:"object-fit:cover;height:200px;width:300px;") if post.image.exists? %>
          </div>
          <div class="col-md-9">
            <h3><%= post.title %></h3>
            <p><%= post.content %></p>
            <%= link_to "Ler Notícia", post, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

      <hr>
      <!-- Pagination -->
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      </ul>

    </div>



<div>
  <% if logged_in? %>
  <div style="width: 100%;">
      <div class="fixed_carrousel">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @posts.each_with_index do |post, index| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
              <% end %>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <% @posts.each_with_index do |post, index| %>

                <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                  <%= image_tag(post.image.url, class: "d-block w-100", style: "height: 500px; object-fit: cover") %>
                  <div class="carousel-caption d-none d-md-block">
                    <h3 class="display-4"> <%= post.title %></h3>
                    <p class="lead"><%= post.content %></p>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Controls -->
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div>
      <div>
      <hr>
          <h1 style="text-align: left">Produtos recentes</h1>

      </div>
  </div>


  <% else %>
    <%= link_to image_tag("dabi.png", alt: "Alliage logo"),
            'http://www.alliage-global.com/site/index.html' %>
    <div class="login">
      <section class="post_form">
        <%= render 'sessions/new' %>
      </section>
    </div>
  <% end %>
</div>

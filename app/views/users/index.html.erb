<% provide(:title, 'All users') %>

<h1>Usuários</h1>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <td><%= link_to user.name, user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Remover', user, method: :delete, data: { confirm: 'Você tem certeza que quer remover este usuário?' } %></td>
      </li>
    <% end %>
  </ul>